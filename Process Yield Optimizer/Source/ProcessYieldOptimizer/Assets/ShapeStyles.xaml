<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="SimplePathStyle" TargetType="Path">
        <Setter Property="Stroke" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="StrokeThickness" Value="2"/>
    </Style>
        
    <Style x:Key="IconPathStyle" TargetType="Path">
        <Setter Property="Stroke" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Fill" Value="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"/>
    </Style>
</ResourceDictionary>